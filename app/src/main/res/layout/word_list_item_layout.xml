<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="PracticeViewModel"
            type="app.lingoknight.practice.PracticeViewModel" />
    </data>

    
    
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    app:strokeWidth="4dp"
    app:strokeColor="@color/colorAccent"
    app:cardElevation="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <TextView
            android:id="@+id/word_text_item_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/word_image_item_view"
            android:layout_alignBottom="@id/word_image_item_view"
            android:layout_marginBottom="8dp"
            android:text="@string/knight"
            android:textSize="56sp"
 />

        <ImageView
            android:id="@+id/word_image_item_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:contentDescription="@string/word_picture"
            android:layout_alignParentStart="true"
            tools:srcCompat="@tools:sample/avatars" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
</layout>