<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="PracticeViewModel"
            type="app.lingoknight.practice.PracticeViewModel" />
    </data>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:cardElevation="2dp"
        app:strokeColor="@color/colorAccent"
        app:strokeWidth="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <TextView
                android:id="@+id/word_text_item_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/word_image_item_view"
                android:gravity="center_horizontal"
                android:text="@string/something_went_wrong"
                android:textSize="36sp" />

            <ImageView
                android:id="@+id/word_image_item_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:contentDescription="@string/something_went_wrong"
                tools:srcCompat="@tools:sample/avatars" />


        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>